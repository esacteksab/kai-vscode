{
  "plugins": [
    "prettier-plugin-sh",
    "prettier-plugin-pkg",
    "prettier-plugin-toml"
  ],
  "overrides": [
    {
      "files": ["*.md"],
      "options": {
        "embeddedLanguageFormatting": "off"
      }
    },
    {
      "files": ["*.toml"],
      "options": {
        "indentTables": true,
        "indentEntries": true,
        "alignEntries": true
      }
    }
  ]
}
